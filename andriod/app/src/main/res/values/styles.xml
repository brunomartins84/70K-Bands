<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AlertDialog" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#505050</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:dialogMessage">?android:attr/textAppearanceMediumInverse</item>

    </style>

    <style name="splashScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>
